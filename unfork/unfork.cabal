cabal-version: 3.0

name: unfork
version: 0

common base
    default-language: Haskell2010
    default-extensions:
        BlockArguments
        ExistentialQuantification
        NamedFieldPuns
    ghc-options: -Wall
    build-depends:
        async
      , base
      , safe-exceptions
      , stm

library
    import: base
    exposed-modules:
        Unfork
